<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_out">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/r9tubtay1t5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rt4j8rgqbbt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingTop="27dp"
                    android:paddingBottom="362dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/r5us9994ixci"
                        android:layout_width="102dp"
                        android:layout_height="99dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginHorizontal="24dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/r8s8nfn044po"
                        android:textColor="#121111"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        android:layout_marginHorizontal="31dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Are you sure you \nwant to sign out ?"
                        />
                    <TextView
                        android:id="@+id/ro6ved5md0m"
                        android:textColor="#121111"
                        android:textSize="10sp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginStart="27dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Something went wrong. Please try again to contimue your order."
                        />
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r7aiqybkmbfd"
                        android:layout_width="329dp"
                        android:layout_height="38dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/sign_out_button"
                        android:paddingVertical="14dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rfvwomgtgku"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Cancel"
                            />
                    </LinearLayout>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r5o26lwg3iwq"
                        android:layout_width="329dp"
                        android:layout_height="38dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/sign_out_background"
                        android:paddingVertical="15dp"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/r0gg27uvxxwwj"
                            android:textColor="#50858B"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sure"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>